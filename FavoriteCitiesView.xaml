<Window x:Class="P04WeatherForecastAPI.Client.FavoriteCitiesView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:P04WeatherForecastAPI.Client"
        mc:Ignorable="d"
        Title="FavoriteCitiesView" Height="450" Width="800">
    <Grid>
        <TextBlock Text="Ulubione miasta" HorizontalAlignment="Center" FontSize="20" Margin="0,10,0,361"/>

        <ListBox ItemsSource="{Binding FavoriteCities}" Margin="0,78,0,10">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Name}" Margin="5"/>
                        <Button Content="Remove" Command="{Binding DataContext.removeCityCommand, RelativeSource={RelativeSource AncestorType={x:Type ListBox}}}"
                                CommandParameter="{Binding DataContext.SelectedCity, RelativeSource={RelativeSource AncestorType={x:Type ListBox}}}"  Margin="5"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
